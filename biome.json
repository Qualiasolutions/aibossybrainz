{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/.vercel",
      "!**/artifacts",
      "!**/public",
      "!**/*.min.js",
      "!**/*.d.ts",
      "!**/_bmad/**",
      "!**/.bmad-core/**",
      "!**/.beads/**",
      "!**/Knowledge Base/**"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": false
    }
  }
}
